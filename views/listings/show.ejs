<% layout('/layouts/boilerplate') -%>
  
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%=list.image.url%>" class="card-img-top show-img" alt="listing_image">

    <div class="card-body">
      <p class="card-text">
  
      <b> <%= list.title %></b> <br>
      <%= list.description%> <br>
      &#8377;<%=list.price.toLocaleString("en-IN")%> <br>
      <%= list.location%> <br>
      <%= list.country%> 

      </p>
    </div>

   </div>
    
    <div class="btns">
      <a href="/listings/<%=list.id%>/edit" class="btn btn-dark col-md-1 offset-3 edit-btn"> Update </a>
   
    <form method="post" action="/listings/<%=list.id%>?_method=DELETE" >
      <button class="btn btn-dark offset-3">Delete</button>
  </form>
     
   </div>

  </div>

